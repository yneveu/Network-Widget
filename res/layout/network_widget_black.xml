 <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/network_widget_black" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:background="@drawable/bg_portrait_black">

<ImageView 
android:layout_width="wrap_content" 
android:layout_height="fill_parent" 
android:id="@+id/ImageViewType"
android:src="@drawable/unknown_32"
android:paddingLeft="3dip">
</ImageView>



<LinearLayout 
android:id="@+id/LinearLayout01" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:baselineAligned="true" 
android:orientation="vertical"
android:layout_weight="1"
android:gravity="center">

<TextView android:id="@+id/TextViewAdress" 
	android:text="@string/unknown_address" 
	android:layout_height="0dip"
	android:layout_weight="1"
    android:paddingTop="30dip" 
    android:textColor="#FFFFFF"
    android:layout_width="wrap_content" android:gravity="center">

</TextView>

<TextView android:id="@+id/TextViewNetwork" 
	android:text="@string/unknown_network" 
	android:layout_height="0dip"
	android:layout_weight="1"
    android:paddingTop="5dip" 
	android:textColor="#FFFFFF"
	android:layout_width="wrap_content" android:gravity="center">

</TextView>



</LinearLayout>






</LinearLayout>
